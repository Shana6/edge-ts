{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
